{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "allowJs": true,
        "strictNullChecks": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}
