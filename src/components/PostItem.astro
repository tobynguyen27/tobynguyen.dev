---
import dayjs from "dayjs";

interface Props {
    title: string;
    date: Date;
    description: string;
    link: string;
    isRedirect?: boolean;
    isDraft?: boolean;
}

const { title, date, description, link, isRedirect = false, isDraft = false } = Astro.props;
---

<a
    href={link}
    target={isRedirect ? "_blank" : "_self"}
    class="hover:(border-gray-500 bg-gray-200) border-gray-400 border flex w-full cursor-pointer flex-col justify-center rounded-md p-5 duration-300">
    <div class="">
        <p class="text-primary text-lg font-semibold">
            {isDraft && "[DRAFT]"}
            {title}
            {isRedirect && <i class="i-carbon-arrow-up-right text-secondary w-5 h-5 align-top" />}
        </p>
    </div>
    <div class="">
        <p class="text-secondary">{description}</p>
    </div>
    <div class="my-3">
        <p class="text-secondary">
            {dayjs(date).format("MMMM D, YYYY")}
        </p>
    </div>
</a>
