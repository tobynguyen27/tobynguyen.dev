---
import AnimatedLogo from "./AnimatedLogo.astro";
import ThemeToggle from "./ThemeToggle.astro";

type NavbarItem = {
    path: string;
    name: string;
    icon: string;
};

const items: NavbarItem[] = [
    { path: "/", name: "Home", icon: "i-material-symbols-home-outline" },
    { path: "/blog", name: "Blog", icon: "i-material-symbols-lab-profile-outline" },
    { path: "/projects", name: "Projects", icon: "i-material-symbols-lightbulb-2-outline" },
    { path: "/uses", name: "Uses", icon: "i-material-symbols-service-toolbox-outline" },
];
---

<header class="w-full flex justify-center items-center border-b border-b-gray-400">
    <nav class="w-11/12 flex flex-col gap-3 sm:flex-row items-center justify-between py-3">
        <div class=""><a href="/"
            ><AnimatedLogo /></a
        ></div>
        <ul class="flex flex-row gap-5">
            {items.map(it => 
                <li class="navbar-item">
                    <a href={it.path} class="hidden sm:block">{it.name}</a>
                    <a href={it.path} class="block sm:hidden"><i class={`${it.icon}`}></i></a>
                </li>
            )}
            <li class="navbar-item">
                <a href="https://github.com/tobynguyen27"><i class="i-carbon-logo-github"></i></a>
            </li>
            <ThemeToggle />
        </ul>
    </nav>
</header>
