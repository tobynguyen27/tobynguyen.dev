{
    "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
    "root": true,
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },

    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },

    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf",
        "bracketSameLine": true,
        "bracketSpacing": true
    },
    "html": {
        "formatter": { "enabled": true },
        "experimentalFullSupportEnabled": true
    },

    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },

    "overrides": [
        {
            "includes": ["**/*.astro"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUnusedImports": "off",
                        "noUnusedVariables": "off"
                    }
                }
            }
        }
    ]
}
