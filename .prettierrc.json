{
  "plugins": ["prettier-plugin-astro"],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "bracketSpacing": true,
  "objectWrap": "collapse",
  "bracketSameLine": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    { "files": "*.astro", "options": { "parser": "astro" } },
    {
      "files": ["**/*.{js,mjs,cjs,jsx}"],
      "options": { "plugins": ["@prettier/plugin-oxc"], "parser": "oxc" }
    },
    {
      "files": ["**/*.{ts,mts,cts,tsx}"],
      "options": { "plugins": ["@prettier/plugin-oxc"], "parser": "oxc-ts" }
    }
  ]
}
